<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% if @task.id %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <% end %>
  <%= f.submit %>
<% end %>
<br>
<br>
<%= link_to "Return to the tasks list", tasks_path %>